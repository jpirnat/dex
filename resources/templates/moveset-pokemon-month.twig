{% extends "base.twig" %}

{% block title %}
	Usage
{% endblock %}

{% block body %}
	<div>
		{{ pokemonName|e }}
	</div>

	<div>
		Raw count: {{ rawCount|e }}
	</div>

	<div>
		Avg. weight: {{ averageWeight|e }}
	</div>

	{% if viabilityCeiling %}
		<div>
			Viability Ceiling: {{ viabilityCeiling|e }}
		</div>
	{% endif %}

	<table>
		<thead>
			<th>Abilities</th>
			<th>%</th>
		</thead>
		<tbody>
			{% for ability in abilities %}
				<tr>
					<td>{{ ability.name|e }}</td>
					<td>{{ ability.percent|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<table>
		<thead>
			<th>Items</th>
			<th>%</th>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{ item.name|e }}</td>
					<td>{{ item.percent|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<table>
		<thead>
			<th>Spreads</th>
			<th>%</th>
		</thead>
		<tbody>
			{% for spread in spreads %}
				<tr>
					<td>{{ spread.natureName|e }}:{{ spread.hp|e }}/{{ spread.atk|e }}/{{ spread.def|e }}/{{ spread.spa|e }}/{{ spread.spd|e }}/{{ spread.spe|e }}</td>
					<td>{{ spread.percent|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<table>
		<thead>
			<th>Moves</th>
			<th>%</th>
		</thead>
		<tbody>
			{% for move in moves %}
				<tr>
					<td>{{ move.name|e }}</td>
					<td>{{ move.percent|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<table>
		<thead>
			<th>Teammates</th>
			<th>%</th>
		</thead>
		<tbody>
			{% for teammate in teammates %}
				<tr>
					<td>
						<a href="/stats/moveset/{{ year|e }}/{{ month|e }}/{{ formatIdentifier|e }}/{{ rating|e }}/{{ teammate.identifier|e }}">
							{{ teammate.name|e }}
						</a>
					</td>
					<td>{{ teammate.percent|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<table>
		<thead>
			<th>Checks and Counters</th>
			<th>?</th>
			<th>?</th>
			<th>?</th>
			<th>% KOed</th>
			<th>% switched out</th>
		</thead>
		<tbody>
			{% for counter in counters %}
				<tr>
					<td>
						<a href="/stats/moveset/{{ year|e }}/{{ month|e }}/{{ formatIdentifier|e }}/{{ rating|e }}/{{ counter.identifier|e }}">
							{{ counter.name|e }}
						</a>
					</td>
					<td>{{ counter.number1|e }}</td>
					<td>{{ counter.number2|e }}</td>
					<td>{{ counter.number3|e }}</td>
					<td>{{ counter.percentKnockedOut|e }}</td>
					<td>{{ counter.percentSwitchedOut|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
