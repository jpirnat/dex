{% extends "html/base.twig" %}

{% block body %}
	<div class="rating-control">
		<ul>
			{% for r in ratings %}
				<li>
					<a
						href="/stats/{{ start|e }}-to-{{ end|e }}/{{ format.identifier|e }}/{{ r|e }}"
						{% if r == rating %}
							class="current"
						{% endif %}
					>{{ r|e }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div>
		{% if showLeadsLink %}
			<a href="/stats/{{ start|e }}-to-{{ end|e }}/{{ format.identifier|e }}/{{ rating|e }}/leads">
				Leads
			</a>
		{% endif %}
	</div>

	<table class="pokemon-usage">
		<thead>
			<tr>
				<th>Rank</th>
				<th></th>
				<th class="pokemon-name">Pok√©mon</th>
				<th>Usage %</th>
				<th>Raw</th>
				<th>%</th>
				<th>Real</th>
				<th>%</th>
			</tr>
		</thead>
		<tbody>
			{% for pokemon in data %}
				<tr>
					<td class="number">{{ pokemon.rank|e }}</td>
					<td class="stats-table__pokemon-icon">
						<img src="/images/pokemon/icons/{{ pokemon.icon|e }}">
					</td>
					<td>
						{% if pokemon.showMovesetLink %}
							<a href="/stats/{{ start|e }}-to-{{ end|e }}/{{ format.identifier|e }}/{{ rating|e }}/pokemon/{{ pokemon.identifier|e }}">
								{{ pokemon.name|e }}
							</a>
						{% else %}
							{{ pokemon.name|e }}
						{% endif %}
					</td>
					<td class="number">{{ pokemon.usagePercent|e }}</td>
					<td class="number">{{ pokemon.raw|e }}</td>
					<td class="number">{{ pokemon.rawPercent|e }}</td>
					<td class="number">{{ pokemon.real|e }}</td>
					<td class="number">{{ pokemon.realPercent|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
