{% extends "html/base.twig" %}

{% block body %}
{% verbatim %}
<div id="app" v-cloak>
	<dex-breadcrumbs :breadcrumbs="breadcrumbs"></dex-breadcrumbs>

	<div class="month-control" v-if="loaded">
		<a v-if="prevMonth" class="button prev" :href="`/stats/${prevMonth.month}`">
			&#9668; {{ prevMonth.text }}
		</a>

		<div class="space"></div>

		<a v-if="nextMonth" class="button next" :href="`/stats/${nextMonth.month}`">
			{{ nextMonth.text }} &#9658;
		</a>
	</div>

	<section v-for="generation in generations" :key="generation.generation">
		<h2 class="dex-section__title">Gen {{ generation.generation }}</h2>

		<table class="dex-table">
			<thead>
				<tr>
					<th>Format</th>
					<th>Rating 1</th>
					<th>Rating 2</th>
					<th>Rating 3</th>
					<th>Rating 4</th>
				</tr>
			</thead>
			<tbody>
				<tr v-for="format in generation.formats" :key="format.identifier">
					<td>{{ format.name }}</td>
					<td v-for="rating in format.ratings" :key="rating">
						<a :href="`/stats/${thisMonth.month}/${format.identifier}/${rating}`">
							{{ rating }}
						</a>
					</td>
				</tr>
			</tbody>
		</table>
	</section>
</div>
{% endverbatim %}
{% endblock %}

{% block scripts %}
	<script src="https://cdn.jsdelivr.net/npm/vue@2.6.11"></script>

	<script src="/js/dex-breadcrumbs.js"></script>
	<script src="/js/stats/month.js"></script>
{% endblock %}
