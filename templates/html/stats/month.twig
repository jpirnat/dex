{% extends "html/base.twig" %}

{% block body %}
	<div class="month-control">
		{% if prevMonth %}
			<a class="button prev" href="/stats/{{ prevMonth.month|e }}">
				&#9668; {{ prevMonth.text|e }}
			</a>
		{% endif %}

		<div class="space"></div>

		{% if nextMonth %}
			<a class="button next" href="/stats/{{ nextMonth.month|e }}">
				{{ nextMonth.text|e }} &#9658;
			</a>
		{% endif %}
	</div>

	<table>
		<thead>
			<tr>
				<th>Format</th>
				<th>Rating 1</th>
				<th>Rating 2</th>
				<th>Rating 3</th>
				<th>Rating 4</th>
			</tr>
		</thead>
		<tbody>
			{% for format in formats %}
				<tr>
					<td>{{ format.name|e }}</td>
					{% for rating in format.ratings %}
						<td>
							<a href="/stats/{{ month|e }}/{{ format.identifier|e }}/{{ rating|e }}">
								{{ rating|e }}
							</a>
						</td>
					{% endfor %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
