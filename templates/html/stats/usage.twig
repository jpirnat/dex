{% extends "html/base.twig" %}

{% block body %}
	<div class="month-control">
		{% if prevMonth %}
			<a class="button prev" href="/stats/{{ prevMonth.month|e }}/{{ format.identifier|e }}/{{ rating|e }}">
				&#9668; {{ prevMonth.text|e }}
			</a>
		{% endif %}

		<div class="space"></div>

		{% if nextMonth %}
			<a class="button next" href="/stats/{{ nextMonth.month|e }}/{{ format.identifier|e }}/{{ rating|e }}">
				{{ nextMonth.text|e }} &#9658;
			</a>
		{% endif %}
	</div>

	<div class="rating-control">
		<ul>
			{% for r in ratings %}
				<li>
					<a
						href="/stats/{{ month|e }}/{{ format.identifier|e }}/{{ r|e }}"
						{% if r == rating %}
							class="current"
						{% endif %}
					>{{ r|e }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="buttons-control">
		{% if showLeadsLink %}
			<a class="button" href="/stats/{{ month|e }}/{{ format.identifier|e }}/{{ rating|e }}/leads">
				Leads
			</a>
		{% endif %}

		<div class="space"></div>

		{% if format.identifier != myFormat or rating != myRating %}
			<div id="save-format" class="button"
				data-format-identifier="{{ format.identifier|e }}"
				data-format-name="{{ format.name|e }}"
				data-rating="{{ rating|e }}"
			>
				Save as my default format
			</div>
		{% endif %}
	</div>

	<table class="pokemon-usage">
		<thead>
			<tr>
				<th>Rank</th>
				<th></th>
				<th class="pokemon-name">Pokémon</th>
				<th>Usage %</th>
				<th>Usage Δ</th>
				<th>Raw</th>
				<th>%</th>
				<th>Real</th>
				<th>%</th>
			</tr>
		</thead>
		<tbody>
			{% for pokemon in pokemons %}
				<tr>
					<td class="number">{{ pokemon.rank|e }}</td>
					<td class="stats-table__pokemon-icon">
						<img src="/images/pokemon/icons/{{ pokemon.icon|e }}">
					</td>
					<td>
						{% if pokemon.showMovesetLink %}
							<a href="/stats/{{ month|e }}/{{ format.identifier|e }}/{{ rating|e }}/pokemon/{{ pokemon.identifier|e }}">
								{{ pokemon.name|e }}
							</a>
						{% else %}
							{{ pokemon.name|e }}
						{% endif %}
					</td>
					<td class="number">{{ pokemon.usagePercent|e }}</td>
					<td
						{% if pokemon.usageChange > 0 %}
							class="number percent-plus"
						{% elseif pokemon.usageChange < 0 %}
							class="number percent-minus"
						{% else %}
							class="number"
						{% endif %}
					>
						<a class="trend-link" href="/stats/trends/chart?type=usage&format={{ format.identifier|e }}&rating={{ rating|e }}&pokemon={{ pokemon.identifier|e }}">
							{{ pokemon.usageChangeText|e }}
						</a>
					</td>
					<td class="number">{{ pokemon.raw|e }}</td>
					<td class="number">{{ pokemon.rawPercent|e }}</td>
					<td class="number">{{ pokemon.real|e }}</td>
					<td class="number">{{ pokemon.realPercent|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

{% block scripts %}
	<script src="/js/main.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
{% endblock %}
