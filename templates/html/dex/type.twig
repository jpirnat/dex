{% extends "html/base.twig" %}

{% block body %}
	<div class="generation-control">
		<ul>
			{% for g in generations %}
				<li>
					<a href="/dex/{{ g.identifier|e }}/types/{{ type.identifier|e }}"
						{% if g.identifier == generation.identifier %}
							class="current"
						{% endif %}
					>{{ g.name|e }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<table class="dex-pokemon">
		<thead>
			<tr>
				<th></th>
				<th scope="col">Pok√©mon</th>
				<th scope="col">Types</th>
				{% if generation.id >= 3 %}
					<th scope="col">Abilities</th>
				{% endif %}
				{% for stat in stats %}
					<th scope="col" class="number">{{ stat|e }}</th>
				{% endfor %}
				<th scope="col" class="number">BST</th>
			</tr>
		</thead>
		<tbody>
			{% for pokemon in pokemons %}
				<tr>
					<td>
						<img src="/images/pokemon/icons/{{ pokemon.icon|e }}">
					</td>
					<td>
						<a href="/dex/{{ generation.identifier|e }}/pokemon/{{ pokemon.identifier|e }}">
							{{ pokemon.name|e }}
						</a>
					</td>
					<td class="types">
						{% for type in pokemon.types %}
							<a href="/dex/{{ generation.identifier|e }}/types/{{ type.identifier|e }}">
								<img src="/images/types/{{ type.icon|e }}">
							</a>
						{% endfor %}
					</td>
					{% if generation.id >= 3 %}
						<td>
							{% for ability in pokemon.abilities %}
								<div>
									<a href="/dex/{{ generation.identifier|e }}/abilities/{{ ability.identifier|e }}"
										{% if ability.isHiddenAbility %}
											class="hidden-ability"
										{% endif %}
									>
										{{ ability.name|e }}
									</a>
								</div>
							{% endfor %}
						</td>
					{% endif %}
					{% for baseStat in pokemon.baseStats %}
						<td class="number">
							{{ baseStat|e }}
						</td>
					{% endfor %}
					<td class="number">{{ pokemon.bst|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<table class="dex-moves">
		<thead>
			<tr>
				<th scope="col">Move</th>
				<th scope="col">Type</th>
				<th scope="col">Category</th>
				<th scope="col">PP</th>
				<th scope="col">Power</th>
				<th scope="col">Accuracy</th>
				{% if generation.id >= 3 %}
					<th scope="col" class="description">Description</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for move in moves %}
				<tr>
					<td>
						<a href="/dex/{{ generation.identifier|e }}/moves/{{ move.identifier|e }}">
							{{ move.name|e }}
						</a>
					</td>
					<td>
						<a href="/dex/{{ generation.identifier|e }}/types/{{ move.type.identifier|e }}">
							<img src="/images/types/{{ move.type.icon|e }}">
						</a>
					</td>
					<td><img src="/images/categories/{{ move.categoryIcon|e }}"></td>
					<td class="number">{{ move.pp|e }}</td>
					<td class="number">{{ move.power|e }}</td>
					<td class="number">{{ move.accuracy|e }}</td>
					{% if generation.id >= 3 %}
						<td class="description">{{ move.description|e }}</td>
					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
