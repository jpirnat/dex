{% extends "html/base.twig" %}

{% block body %}
	<table class="dex-pokemon">
		<thead>
			<tr>
				<th></th>
				<th scope="col">Pok√©mon</th>
				<th scope="col">Types</th>
				<th scope="col">Abilities</th>
				{% for stat in stats %}
					<th scope="col" class="number">{{ stat|e }}</th>
				{% endfor %}
			</tr>
		</thead>
		<tbody>
			{% for pokemon in pokemons %}
				<tr>
					<td>
						<img src="/images/pokemon/icons/{{ pokemon.formIcon|e }}">
					</td>
					<td>
						<a href="/dex/{{ generationIdentifier|e }}/pokemon/{{ pokemon.identifier|e }}">
							{{ pokemon.name|e }}
						</a>
					</td>
					<td class="types">
						{% for type in pokemon.types %}
							<a href="/dex/{{ generationIdentifier|e }}/types/{{ type.identifier|e }}">
								<img src="/images/types/{{ type.icon|e }}">
							</a>
						{% endfor %}
					</td>
					<td>
						{% for ability in pokemon.abilities %}
							<div>
								<a href="/dex/{{ generationIdentifier|e }}/abilities/{{ ability.identifier|e }}"
									{% if ability.isHiddenAbility %}
										class="hidden-ability"
									{% endif %}
								>
									{{ ability.name|e }}
								</a>
							</div>
						{% endfor %}
					</td>
					{% for baseStat in pokemon.baseStats %}
						<td class="number">
							{{ baseStat|e }}
						</td>
					{% endfor %}
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<table class="dex-moves">
		<thead>
			<tr>
				<th scope="col">Move</th>
				<th scope="col">Type</th>
				<th scope="col">Category</th>
				<th scope="col">PP</th>
				<th scope="col">Power</th>
				<th scope="col">Accuracy</th>
				<th scope="col">Priority</th>
				<th scope="col" class="description">Description</th>
			</tr>
		</thead>
		<tbody>
			{% for move in moves %}
				<tr>
					<td>
						<a href="/dex/{{ generationIdentifier|e }}/moves/{{ move.identifier|e }}">
							{{ move.name|e }}
						</a>
					</td>
					<td>
						<a href="/dex/{{ generationIdentifier|e }}/types/{{ move.type.identifier|e }}">
							<img src="/images/types/{{ move.type.icon|e }}">
						</a>
					</td>
					<td><img src="/images/categories/{{ move.categoryIcon|e }}"></td>
					<td class="number">{{ move.pp|e }}</td>
					<td class="number">{{ move.power|e }}</td>
					<td class="number">{{ move.accuracy|e }}</td>
					<td class="number">{{ move.priority|e }}</td>
					<td class="description">{{ move.description|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
