{% extends "html/base.twig" %}

{% block body %}
	<div class="generation-control">
		<ul>
			{% for g in generations %}
				<li>
					<a href="/dex/{{ g.identifier|e }}/moves"
						{% if g.identifier == generation.identifier %}
							class="current"
						{% endif %}
					>{{ g.name|e }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<table class="dex-moves">
		<thead>
			<tr>
				<th scope="col">Move</th>
				<th scope="col">Type</th>
				<th scope="col">Category</th>
				<th scope="col">PP</th>
				<th scope="col">Power</th>
				<th scope="col">Accuracy</th>
				{% if showMoveDescriptions %}
					<th scope="col" class="description">Description</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for move in moves %}
				<tr>
					<td>
						<a href="/dex/{{ generation.identifier|e }}/moves/{{ move.identifier|e }}">
							{{ move.name|e }}
						</a>
					</td>
					<td>
						<a href="/dex/{{ generation.identifier|e }}/types/{{ move.type.identifier|e }}">
							<img src="/images/types/{{ move.type.icon|e }}" alt="{{ move.type.name|e }}">
						</a>
					</td>
					<td class="category"><img src="/images/categories/{{ move.categoryIcon|e }}"></td>
					<td class="number">{{ move.pp|e }}</td>
					<td class="number">{{ move.power|e }}</td>
					<td class="number">{{ move.accuracy|e }}</td>
					{% if showMoveDescriptions %}
						<td class="description">{{ move.description|e }}</td>
					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
