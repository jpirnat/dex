{% extends "html/base.twig" %}

{% block body %}
{% verbatim %}
<div id="app" v-cloak>
	<dex-breadcrumbs :breadcrumbs="breadcrumbs"></dex-breadcrumbs>

	<div class="version-group-control" v-if="versionGroups.length">
		<ul>
			<li v-for="vg in versionGroups">
				<a :href="'/dex/' + vg.identifier"
					:class="{
						'current': vg.identifier === versionGroup.identifier
					}"
				>{{ vg.name }}</a>
			</li>
		</ul>
	</div>

	<div v-if="!loaded" class="dex-loader-container">
		<div class="dex-loader"></div>
	</div>

	<template v-if="loaded" class="dex-index__links">
		<div class="dex-index__links">
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/pokemon'">Pok√©mon</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/moves'">Moves</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/types'">Types</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/items'">Items</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/abilities'" v-if="versionGroup.hasAbilities">Abilities</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/natures'" v-if="versionGroup.hasNatures">Natures</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/tms'" v-if="versionGroup.hasTms">TMs</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/egg-groups'" v-if="versionGroup.hasBreeding">Egg Groups</a>
		</div>

		<div class="dex-section__title">Tools</div>
		<div class="dex-index__links">
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/tools/iv-calculator'"
				v-if="versionGroup.statFormulaType === 'gen3'"
			>IV Calculator</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/tools/ev-calculator'"
				v-if="versionGroup.statFormulaType === 'gen3'"
			>EV Calculator</a>
			<a class="dex-index__link" :href="'/dex/' + versionGroup.identifier + '/tools/stat-calculator'">Stat Calculator</a>
		</div>
	</template>
</div>
{% endverbatim %}
{% endblock %}

{% block scripts %}
	<script src="https://unpkg.com/vue@3.5.13/dist/vue.global.js"></script>

	<script type="module" src="/js/dex/index.js"></script>
{% endblock %}
