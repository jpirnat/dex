{% extends "html/base.twig" %}

{% block body %}
	<div class="generation-control">
		<ul>
			{% for g in generations %}
				<li>
					<a href="/dex/{{ g.identifier|e }}/abilities"
						{% if g.identifier == generation.identifier %}
							class="current"
						{% endif %}
					>{{ g.name|e }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			{% for ability in abilities %}
				<tr>
					<td>
						<a href="/dex/{{ generation.identifier|e }}/abilities/{{ ability.identifier|e }}">
							{{ ability.name|e }}
						</a>
					</td>
					<td>{{ ability.description|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
