{% extends "html/base.twig" %}

{% block body %}
	<table class="dex-natures">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Raises</th>
				<th scope="col">Lowers</th>
				<th scope="col">VC Exp Remainder</th>
			</tr>
		</thead>
		<tbody>
			{% for nature in natures %}
				<tr>
					<td>{{ nature.name|e }}</td>
					<td
						{% if nature.increasedStatName == "-" %}
							class="dex-nature--neutral"
						{% else %}
							class="dex-nature--increased"
						{% endif %}
					>
						{{ nature.increasedStatName|e }}
					</td>
					<td
						{% if nature.decreasedStatName == "-" %}
							class="dex-nature--neutral"
						{% else %}
							class="dex-nature--decreased"
						{% endif %}
					>
						{{ nature.decreasedStatName|e }}
					</td>
					<td class="dex-table--number">{{ nature.vcExpRemainder|e }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
